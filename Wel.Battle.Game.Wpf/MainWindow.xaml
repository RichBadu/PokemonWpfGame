<Window x:Class="Wel.Battle.Game.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wel.Battle.Game.Wpf"
        mc:Ignorable="d"
        Title="Battle Game" Height="900" Width="600">
    <StackPanel Margin="20">
        <Canvas>
            <Image x:Name="imgBackground" Height="1001" Width="764" Source="/pictures/background/tablet.png" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="-93" Canvas.Top="-134"/>
        </Canvas>
        <StackPanel Height="344" Width="472">
            <DockPanel>
                <Image x:Name="imgPokemonTypeY" Margin="0 0 12 0" Height="16" Width="16"/>
                <TextBlock x:Name="tbkPokemonNameY"><Run Text="Pokemon Y"/></TextBlock>
                <Border x:Name="PokemonYHealthBar" HorizontalAlignment="Right" Width="100" Height="10" Background="green" CornerRadius="4"/>
            </DockPanel>
            <Canvas Height="280">
                <Image x:Name="imgPokemonX" Height="130" Canvas.Left="5" Canvas.Top="139" Width="210"/>
                <Image x:Name="imgPokemonY" Height="130" Canvas.Left="258" Width="210" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="10"/>
                <TextBlock x:Name="tbkEndgame"  Height="85" Width="404" Canvas.Left="48" Canvas.Top="119" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="50" Visibility="Hidden" FontFamily="Gill Sans Ultra Bold" ><Run Text="GAME OVER!"/></TextBlock>
                <TextBlock x:Name="tbkresult"  Height="70" Width="366" Canvas.Left="64" Canvas.Top="66" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="48" Visibility="Hidden"  RenderTransformOrigin="0.5,0.5" FontFamily="Gill Sans Ultra Bold" FontWeight="Bold">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="0.134"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <Label x:Name="lblEffectiveness" Content="" Canvas.Left="7" Canvas.Top="34" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="173" Height="70" FontSize="14">
                    <Label.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-25.918"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Label.RenderTransform>
                </Label>
                <Label x:Name="lblEffectivenessOpponent" Content="" Canvas.Left="289" Canvas.Top="178" RenderTransformOrigin="0.5,0.5" Width="173" Height="70" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Label.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="20.297"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Label.RenderTransform>
                </Label>
                <Image x:Name="pokemonA_P1" Height="18" Canvas.Left="276" Canvas.Top="262" Width="18" Source="/pictures/buttons/pokeball.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Image x:Name="pokemonB_P1" Height="18" Canvas.Left="296" Canvas.Top="262" Width="18" Source="/pictures/buttons/pokeball.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Image x:Name="pokemonC_P1" Height="18" Canvas.Left="316" Canvas.Top="262" Width="18" Source="/pictures/buttons/pokeball.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <Image x:Name="pokemonA_P2" Height="18" Canvas.Left="276" Canvas.Top="-47" Width="18" Source="/pictures/buttons/pokeball.png" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <Image x:Name="pokemonB_P2" Height="18" Canvas.Left="296" Canvas.Top="-47" Width="18" Source="/pictures/buttons/pokeball.png" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <Image x:Name="pokemonC_P2" Height="18" Canvas.Left="316" Canvas.Top="-47" Width="18" Source="/pictures/buttons/pokeball.png" HorizontalAlignment="Center" VerticalAlignment="Top"/>

            </Canvas>
            <DockPanel>
                <Image x:Name="imgPokemonTypeX" Margin="0 0 12 0" Height="16" Width="16"/>
                <TextBlock x:Name="tbkPokemonNameX"><Run Text="Pokemon X"/></TextBlock>
                <Border x:Name="PokemonXHealthBar" HorizontalAlignment="Right" Width="200" Height="10" Background="green" CornerRadius="4"/>
            </DockPanel>
        </StackPanel>
        <Border CornerRadius="20" Background="#d1d5db" Height="384" Width="512" Margin="0 20 0 0">
            <StackPanel>
                <Grid Height="300">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="Attack1Button" Grid.Column="0" Grid.Row="0" Width="200" Height="100" Click="Attack1Button_Click" Visibility="Hidden" Content="#1"/>
                        <Button x:Name="Attack2Button" Grid.Column="1" Grid.Row="0" Width="200" Height="100" Click="Attack2Button_Click" Visibility="Hidden" Content="#2"/>
                        <Button x:Name="Attack3Button" Grid.Column="0" Grid.Row="1" Width="200" Height="100" Click="Attack3Button_Click" Visibility="Hidden" Content="#3"/>
                        <Button x:Name="Attack4Button" Grid.Column="1" Grid.Row="1" Width="200" Height="100" Click="Attack4Button_Click" Visibility="Hidden" Content="#4"/>
                    </Grid>

                    <Grid Margin="0 10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"  />
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Viewbox Grid.Row="0" Margin="20 5">
                            <Button x:Name="Swap1Button" Height="100" Width="500" Visibility="Hidden" Click="Swap1Button_Click"/>
                        </Viewbox>
                        <Viewbox Grid.Row="1" Margin="20 5">
                            <Button x:Name="Swap2Button" Height="100" Width="500" Visibility="Hidden" Click="Swap2Button_Click"/>
                        </Viewbox>
                        <Viewbox Grid.Row="2" Margin="20 5">
                            <Button x:Name="Swap3Button" Height="100" Width="500" Visibility="Hidden" Click="Swap3Button_Click"/>
                        </Viewbox>
                    </Grid>

                    <Button x:Name="btnAttack" Width="400" Height="200" Click="AttackButton_Click">
                        <Image x:Name="imgBattle" Height="138" Width="162" Source="/pictures/buttons/Battle.png"/>
                    </Button>
                    <Button x:Name="btnResetGame" Width="400" Height="100" Click="ResetButton_Click" Margin="56,141,56,59" Visibility="Hidden"  Content="reset game"/>
                </Grid>
                <WrapPanel Height="84" HorizontalAlignment="Center">
                    <Button x:Name="BtnHeal" Width="200" Height="70" Margin="10 0 10 0" Click="BtnHeal_Click">
                        <Image x:Name="imgHeal" Height="60" Width="83" Source="/pictures/buttons/Potion.png"/>
                    </Button>
                    <Button x:Name="btnSwap" Width="200" Height="70" Margin="10 0 10 0" Click="btnSwap_Click">
                        <Image x:Name="imgSwap" Height="60" Width="74" Source="/pictures/buttons/Swap.png"/>
                    </Button>
                </WrapPanel>
            </StackPanel>
        </Border>
    </StackPanel>
</Window>
